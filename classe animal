class animal:
    def __init__(self, nombre,especie):
        self.nombre=nombre
        self.especie=especie

    def mostrar_detalles(self):
        print(self.nombre,"-", self.especie)

class perro(animal):
    def emitir_sonido(self):
        print("guau")

class gato(animal):
    def emitir_sonido(self):
        print("miau")

perro =perro("Buddy","perro")
gato = gato("milo","gato")

perro.mostrar_detalles()
perro.emitir_sonido()

gato.mostrar_detalles()
gato.emitir_sonido()
